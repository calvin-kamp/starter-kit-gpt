{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],

	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "preserve",

		"paths": {
			"@root/*": ["./src/*"],
			"@styles/*": ["./src/styles/*"],
			"@scripts/*": ["./src/scripts/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@components/*": ["./src/components/*"]
		}
	}
}